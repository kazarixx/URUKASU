<div class="container">
  <div class="row">
    <div class="col-4">
      <h3><%= @user.name %></h3>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg", size: '100x100' %>
          <% if @user.id == current_user.id %>
           <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
           <p><%= link_to "退会", users_confirm_path %></p>
          <% end %>
    </div>

    <div class="col-8">
      <div class="row">
        <h3>いいね一覧</h3>
      </div>

      <div class="row">
        <h3>コメント済み一覧</h3>
        <% @brand.comments.each do |comment| %>
      </div>
    </div>
  </div>
</div>
