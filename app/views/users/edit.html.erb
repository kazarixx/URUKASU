<div>
  <h3>プロフィール編集</h3>
    <%= form_with model: @user, local:true do |f| %>
      <div>
        <%= f.label :profile_image %>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpeg", size: '60x60'%>
      </div>
      <div>
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, placeholder:"名前"%>
      </div>
      <div>
        <%= f.label :email %>
        <%= f.email_field :email, placeholder:"メールアドレス" %>
      </div>
    <%= f.submit "変更を保存" %>
  <% end %>
</div>