
<div class="row">
    <div class="flex">
    <% brands.each do |brand| %>
        <div class="item">
          <div class="card">
              <div class="card-img-top-ground">
              <div class="card-img-top"><%= link_to brand_path(brand) do %><%= attachment_image_tag brand, :brand_image, size: '100%', fallback: "no_image.jpeg",class:"card-img-top" %><% end %></div>
              </div>
                <div class="card-body">
                      <h5 class="card-title">
                        <%= link_to brand.brand_name , brand_path(brand) , class:"text-dark"  %></br>
                          <i class="far fa-flag"></i><span> <%= Prefecture.find_by(id: brand.prefecture_id).name %></span>
                      </h5>
                      <p class="card-text">JAN：<%= brand.jan %></p>
                      <p class="card-text"><i class="fas fa-comment"></i> コメント <%= brand.comments.count %>件</p>
                      <p class="card-text"><i class="fas fa-heart"></i> いいね　<%= brand.comments.count %></p>
              </div>
          </div>
        </div>
    <% end %>
    </div>
</div>
<%= paginate @brands %>

