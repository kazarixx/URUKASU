<% if brand.favorited_by?(current_user) %>
  <%= link_to brand.favorites.count, brand_favorites_path(brand), method: :delete, remote: true, class: "fas fa-heart" %>
<% else %>
  <%= link_to brand.favorites.count, brand_favorites_path(brand), method: :post, remote: true, class: "far fa-heart" %>
<% end %>