<!--コメントの-->
<% brand.comments.each do |comment| %>
    <div class="pt-2 px-2" style="background-color: #fffffe; border: 2px solid #272343; border-radius: 2px;">
    <!-- rateを表示 -->
    <div class="review-rating" data-score="<%= comment.rate %>">評価：</div>
        <p>コメントした人：<%= comment.user.name %></p>
        <p>投稿日：<%= comment.created_at.strftime('%Y/%m/%d') %></p>
        <p><%= comment.comment %></p>
        <span class="sentiment-score">本文の感情分析スコア<%= comment.score %></span>
            <% if comment.user == current_user %>
               <p class="comments">
                  <%= link_to "削除", brand_comment_path(comment.brand, comment), method: :delete, remote: true,class: "btn btn-danger" %>
                </p>
            <% end %>
    </div>
    <% end %>