<% brand.comments.each do |comment| %>
    <p>コメントした人：<%= comment.user.name %></p>
    <p>投稿日：<%= comment.created_at.strftime('%Y/%m/%d') %></p>
    <p><%= comment.comment %></p>
        <% if comment.user == current_user %>
           <p class="comments">
              <%= link_to "削除", brand_comment_path(comment.brand, comment), method: :delete, remote: true %>
            </p>
        <% end %>
<% end %>