<!--コメントの一覧-->
<% brand.comments.each do |comment| %>
<div class="col comment-ground">
    <!-- rateを表示 -->
    <div class="container">
        <div class="row">
            <div class="col-3"><%= link_to user_path(comment.user_id) do %><%= attachment_image_tag comment.user, :profile_image, size: '150x150',fallback: asset_path("no_image.jpeg"), size: '150x150',class: "profiele-img" %><% end %></div>
            <div class="col-3">
                <p><%= link_to comment.user.name,user_path(comment.user_id) %>さん</p>
                <p>投稿日：<%= comment.created_at.strftime('%Y/%m/%d') %></p>
                <span class="review-rating" data-score="<%= comment.rate %>">評価：</span>
                    <% if comment.user == current_user %>
                       <span class="comments">
                          <%= link_to "削除", brand_comment_path(comment.brand, comment), method: :delete, remote: true,class: "btn btn-danger" %>
                        </span>
                    <% end %>
            </div>
            <div class="col-6 comment-area">
                <p><%= comment.comment %></p>
            </div>
        </div>
    </div>
</div>
<% end %>